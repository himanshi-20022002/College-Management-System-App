<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/student_faculty_activity_bk"
    tools:context=".activities.FacultyOrStudent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick Your Role"
            android:textSize="30dp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:textColor="@color/white">

        </TextView>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">
        <Button
            android:id="@+id/student"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/student_faculty_bk"
            android:paddingTop="10dp"
            android:drawableTop="@drawable/student_icon"
            android:text="@string/i_m_a_student"
            android:textAllCaps="true"
            android:textSize="20dp">

        </Button>

        <Button
            android:id="@+id/faculty"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/student_faculty_bk"
            android:text="@string/i_m_a_faculty_member"
            android:textSize="20dp"
            android:textAllCaps="true"
            android:paddingTop="10dp"
            android:drawableTop="@drawable/faculty_icon">

        </Button>

</LinearLayout>






</LinearLayout>